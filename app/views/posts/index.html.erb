<% @posts.each do |post|%>
    <h2><%=post.name%></h2>
    <div><%=post.detail%></div>
    <br>
    <%= link_to "Read Post", post%>
<% end%>

<br>

<% if policy(@post).edit? %>
<%= link_to "Edit Post", edit_post_path(1)%>
<%= link_to "Add New Post", new_post_path%>
<%= link_to "Sign out",  destroy_admin_session_path, method: :delete%>
<% else %>
<%= link_to "Log In", new_admin_session_path%>
<%= link_to "Sign Up", new_admin_registration_path%>
<%= link_to "Show", post_path(1)%>
<% end %>

